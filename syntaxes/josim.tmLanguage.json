{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "josim.josim",
	"patterns": [
		{
			"include": "#constants"
		},
		{
			"include": "#controls"
		},
		{
			"include": "#formatter variable"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#components"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#EOF"
		}
	],
	"repository": {
		"formatter variable": {
			"begin": "\\{{1,}",
			"end": "\\}{1,}",
			"name": "constant.character.escape.josim",
			"patterns": [
				{
					"match": ".+",
					"name": "variable.name.josim"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"match": "#.*",
					"name": "invalid.commentOut.josim"
				},
				{
					"match": "\\b(PI|PHI_ZERO|BOLTZMANN|EV|HBAR|C|MU0|EPS0|SIGMA)\\b",
					"name": "constant.language.josim"
				}
			]
		},
		"controls": {
			"patterns": [
				{
					"include": "#subckt"
				},
				{
					"match": "^\\.(?!(model|tran|subckt|ends|end|temp|neb|spread|iv|print|plot|file|save|param|control|endc|include)).*",
					"name":"invalid.controle.josim"
				},
				{
					"begin": "(\\.tran)\\s+(.+)",
					"end": "\\n",
					"beginCaptures": {
						"1": {
							"name": "keyword.control.josim"
						},
						"2": {
							"name": "string.quoted.other.josim"
						}
					}
				},
				{
					"match": "(\\.print)\\s+(\\S+)\\s+(.+)",
					"captures": {
						"1": {
							"name": "keyword.control"
						},
						"2": {
							"name": "variable.paramaterType.josim"
						},
						"3": {
							"name": "string.quoted.other.devNode.josim"
						}
					}
				},
				{
					"begin":"^.print\\s",
					"end":"\\n",
					"name":"keyword.control",
					"patterns": [
						{
							"match":"(\\w)\\((\\w+)\\)",
							"captures": {
								"1":{
									"name": "variable.paramaterType.josim"
								},
								"2":{
									"name": "string.quoted.other.devNode.josim"
								}
							}
						}
					]
				},
				{
					"begin": "^(\\.model)\\s+([\\S]+)\\s+(\\w+)",
					"end": "\\n",
					"beginCaptures": {
						"1": {
							"name": "entity.name.type.josim"
						},
						"2": {
							"name": "variable.name.josim"
						},
						"3": {
							"name": "support.function"
						}
					},
					"patterns": [
						{
							"match": "\\s*(\\S+)\\s*=\\s*([\\S|^,]+)",
							"captures": {
								"1": {
									"name": "variable.name.josim"
								},
								"2": {
									"name": "constant.numeric"
								}
							}
						}
					]
				},
				{
					"match": "(\\.param)\\s*(\\S+)\\s*=\\s*(\\S+)",
					"captures": {
						"1": {
							"name": "entity.name.type.josim"
						},
						"2":{
							"name":"variable.name"
						},
						"3":{
							"name":"constant.numeric"
						}
					}
				},
				{
					"begin": "(\\.include)",
					"end": "\\n",
					"beginCaptures": {
						"1": {
							"name": "keyword.control.josim"
						}
					},
					"patterns": [
						{
							"match": "(.+)?",
							"name": "string.quoted.other.josim"
						}
					]
				},
				{
					"match":"\\.(model|tran|subckt|ends|temp|neb|spread|iv|print|plot|file|save|param|control|endc|include)",
					"name":"keyword.control.josim"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.josim",
					"match": "\\b(if|while|for|return)\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"match": "\\*.+",
					"name": "comment.josim"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.josim",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.josim",
					"match": "\\\\."
				}
			]
		},
		"subckt": {
			"begin": "(\\.subckt)\\s+(\\S+)\\s(.+)",
			"end": "(\\.ends)",
			"beginCaptures": {
				"1": {
					"name": "entity.name.type.josim"
				},
				"2": {
					"name": "entity.name.function.josim"
				},
				"3": {
					"name": "constant.numeric.josim"
				}
			},
			"endCaptures": {
				"1": {
					"name": "entity.name.type.josim"
				}
			},
			"patterns": [
				{
					"match": ".end[^s]+",
					"name": "invalid.josim"
				},
				{
					"include": "#components"
				}
			]
		},
		"components": {
			"patterns": [
				{
					"match":"\\*.*",
					"name":"comment.line"
				},
				{
					"begin": "((X|x)\\w+)",
					"end": "\\n",
					"beginCaptures": {
						"1": {
							"name": "variable.other.josim"
						}
					},
					"patterns": [
						{
							"match": "\\b([0-9]+)\\b",
							"name": "constant.numeric"
						},
						{
							"match": "\\b(\\w+)\\b",
							"name": "entity.name.function.josim"
						}
					]
				},
				{
					"begin": "((B|b)\\S+)",
					"end": "\\n",
					"beginCaptures": {
						"1": {
							"name": "variable.parameter.language"
						}
					},
					"patterns": [
						{
							"match": "\\b([0-9]+)\\b",
							"name": "constant.numeric"
						},
						{
							"match": "\\b(\\S+)\\s*=\\s*(\\S+)",
							"captures": {
								"1": {
									"name": "variable.parameter"
								},
								"2": {
									"name": "constant.numeric"
								}
							}
						},
						{
							"match": "\\b(\\S+)\\b",
							"name": "entity.name.function"
						}
					]
				},
				{
					"begin": "([vViIpP]\\S+)",
					"beginCaptures": {
						"1": {
							"name": "variable.language"
						}
					},
					"end": "\\n",
					"patterns": [
						{
							"match": "\\s([0-9]+)\\s",
							"name": "constant.numeric.josim"
						},
						{
							"begin": "\\(",
							"end": "\\)",
							"name": "variable",
							"patterns": [
								{
									"match": "\\s*([0-9][^)\\S]+)\\s*",
									"name": "constant.numeric.josim"
								},
								{
									"match": "\\s*[^0-9]\\w+\\s*",
									"name": "variable.name.josim"
								}
							]
						},
						{
							"match": "\\w+",
							"name": "entity.name.function.josim"
						}
					]
				},
				{
					"match": "^(K\\w+)\\s+(\\w+)\\s+(\\w)\\s+(\\w)",
					"captures": {
						"1":{
							"name" :"variable.language"
						},
						"2":{
							"name" :"variable.language"
						},
						"3":{
							"name" :"variable.language"
						},
						"4":{
							"name" :"constant.numeric"
						}
					}
				},
				{
					"begin": "\\*.*",
					"end": "\\n",
					"name": "comment.josim"
				},
				{
					"begin": "^(\\w+)",
					"end": "\\n",
					"beginCaptures": {
						"1": {
							"name": "constant.character.josim"
						}
					},
					"patterns": [
						{
							"begin": "\\b[0-9]+",
							"end": "\\b",
							"patterns": [
								{
									"match": "\\S+",
									"name": "string.quoted.other.josim"
								}
							],
							"name": "constant.numeric.josim"
						},
						{
							"match": "[0-9]+\\.?[0-9]+\\S+",
							"name": "string.quoted.other.josim"
						},{
							"match": "\\*.*",
							"name":"comment.josim"
						}
					]
				}
			]
		},
		"EOF": {
			"begin": "(\\.end)",
			"name":"keyword.control.josim",
			"end": "\\n\\n\\z",
			"patterns": [
				{
					"match": ".",
					"name": "invalid.josim"
				}
			]
		}
	},
	"scopeName": "source.jsm"
}