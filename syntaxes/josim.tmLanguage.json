{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "josim.josim",
	"patterns": [
		{
			"include": "#constants"
		},
		{
			"include": "#controls"
		},
		{
			"include": "#formatter variable"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#components"
		},
		{
			"include": "#EOF"
		}
	],
	"repository": {
		"formatter variable": {
			"begin": "\\{{1,}",
			"end": "\\}{1,}",
			"name": "constant.character.escape.josim",
			"patterns": [
				{
					"match": ".+",
					"name": "variable.name.josim"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"match": "#.*",
					"name": "invalid.josim"
				},
				{
					"match": "(PI|PHI_ZERO|BOLTZMANN|EV|HBAR|C|MU0|EPS0|SIGMA) *(\\w+)",
					"name": "invalid.josim"
				},
				{
					"match": "(\\S+)+(PI|PHI_ZERO|BOLTZMANN|EV|HBAR|C|MU0|EPS0|SIGMA)",
					"name": "invalid.josim"
				},
				{
					"match": "\\b(PI|PHI_ZERO|BOLTZMANN|EV|HBAR|C|MU0|EPS0|SIGMA)\\b",
					"name": "constant.language.josim"
				}
			]
		},
		"controls": {
			"patterns": [
				{
					"include": "#subckt"
				},
				{
					"begin": "(\\.tran)\\s+(.+)",
					"end": "\\n",
					"beginCaptures": {
						"1": {
							"name": "keyword.control.josim"
						},
						"2": {
							"name": "string.quoted.other.josim"
						}
					}
				},
				{
					"match": "(\\.print)\\s+(\\S+)\\s+(\\S+)\\s*(\\S*)\\n",
					"captures": {
						"1": {
							"name": "storage.type.josim"
						},
						"2": {
							"name": "variable.josim"
						},
						"3": {
							"name": "string.quoted.other.josim"
						},
						"4": {
							"name": "string.quoted.other.josim"
						}
					}
				},
				{
					"begin": "^(\\.model)\\s+([\\S]+)\\s+(\\w+)",
					"end": "\\n",
					"beginCaptures": {
						"1": {
							"name": "entity.name.type.josim"
						},
						"2": {
							"name": "variable.name.josim"
						},
						"3": {
							"name": "support.function"
						}
					},
					"patterns": [
						{
							"match": "\\s*(\\S+)\\s*=\\s*([\\S|^,]+)",
							"captures": {
								"1": {
									"name": "variable.name.josim"
								},
								"2": {
									"name": "constant.numeric"
								}
							}
						}
					]
				},
				{
					"match": "(\\.param)\\s*(\\S+)\\s*=\\s*(\\S+)",
					"captures": {
						"1": {
							"name": "entity.name.type.josim"
						},
						"2":{
							"name":"variable.name"
						},
						"3":{
							"name":"constant.numeric"
						}
					}
				},
				{
					"begin": "(\\.include)",
					"end": "\\n",
					"beginCaptures": {
						"1": {
							"name": "keyword.control.josim"
						}
					},
					"patterns": [
						{
							"match": "(.+)?",
							"name": "string.quoted.other.josim"
						}
					]
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.josim",
					"match": "\\b(if|while|for|return)\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"begin": "(\\*+\\s+top\\scell\\s*:\\s*\\S+)",
					"beginCaptures": {
						"1": {
							"name": "keyword.control.less.josim"
						}
					},
					"end": "\\n",
					"patterns": [
						{
							"include": "#components"
						}
					]
				},
				{
					"begin": "\\*{1,}",
					"end": "\\n",
					"name": "comment.josim"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.josim",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.josim",
					"match": "\\\\."
				}
			]
		},
		"subckt": {
			"begin": "(\\.subckt)\\s+(\\S+)\\s(.+)",
			"end": "(\\.ends)",
			"beginCaptures": {
				"1": {
					"name": "entity.name.type.josim"
				},
				"2": {
					"name": "entity.name.function.josim"
				},
				"3": {
					"name": "constant.numeric.josim"
				}
			},
			"endCaptures": {
				"1": {
					"name": "entity.name.type.josim"
				}
			},
			"patterns": [
				{
					"match": ".end[^s]+",
					"name": "invalid.josim"
				},
				{
					"include": "#components"
				}
			]
		},
		"components": {
			"patterns": [
				{
					"begin": "(X\\w+)",
					"end": "\\n",
					"beginCaptures": {
						"1": {
							"name": "variable.other.josim"
						}
					},
					"patterns": [
						{
							"match": "\\b([0-9]+)\\b",
							"name": "constant.numeric"
						},
						{
							"match": "\\b(\\w+)\\b",
							"name": "entity.name.function.josim"
						}
					]
				},
				{
					"begin": "(B\\S+)",
					"end": "\\n",
					"beginCaptures": {
						"1": {
							"name": "constant.language"
						}
					},
					"patterns": [
						{
							"match": "\\b([0-9]+)\\b",
							"name": "constant.numeric"
						},
						{
							"match": "\\b(\\S+)\\s*=\\s*(\\S+)",
							"captures": {
								"1": {
									"name": "variable.name"
								},
								"2": {
									"name": "constant.numeric"
								}
							}
						},
						{
							"match": "\\b(\\S+)\\b",
							"name": "entity.name.function"
						}
					]
				},
				{
					"begin": "(V\\S+)",
					"beginCaptures": {
						"1": {
							"name": "constant.language.josim"
						}
					},
					"end": "\\n",
					"patterns": [
						{
							"match": "\\s([0-9]+)\\s",
							"name": "constant.numeric.josim"
						},
						{
							"begin": "\\(",
							"end": "\\)",
							"name": "variable",
							"patterns": [
								{
									"match": "\\s*([0-9][^)\\S]+)\\s*",
									"name": "constant.numeric.josim"
								},
								{
									"match": "\\s*[^0-9]\\w+\\s*",
									"name": "variable.name.josim"
								}
							]
						},
						{
							"match": "\\w+",
							"name": "entity.name.function.josim"
						}
					]
				},
				{
					"begin": "\\*+",
					"end": "\\n",
					"name": "comment.josim"
				},
				{
					"begin": "(\\S+)",
					"end": "\\n",
					"beginCaptures": {
						"1": {
							"name": "constant.character.josim"
						}
					},
					"patterns": [
						{
							"begin": "\\b[0-9]+",
							"end": "\\b",
							"patterns": [
								{
									"match": "\\S+",
									"name": "string.quoted.other.josim"
								}
							],
							"name": "constant.numeric.josim"
						},
						{
							"match": "[0-9]+\\.?[0-9]+\\S+",
							"name": "string.quoted.other.josim"
						},
						{
							"match": "\\*\\S+",
							"name": "comment.josim"
						},
						{
							"match": "fcheck",
							"name": "comment.josim"
						}
					]
				}
			]
		},
		"EOF": {
			"begin": "(.end)",
			"beginCaptures": {
				"1": {
					"name": "keyword.control.josim"
				}
			},
			"end": "\\n\\n\\z",
			"patterns": [
				{
					"match": ".",
					"name": "invalid.josim"
				}
			]
		}
	},
	"scopeName": "source.jsm"
}